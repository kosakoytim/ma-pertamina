<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorSecondaryGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.app.komo.pertaminamanagementapp.Pembelian">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/nama_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Nama"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/nama"
            android:focusable="false"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/no_ktp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No KTP"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/no_ktp"
            android:inputType="text"
            android:focusable="false"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/alamat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/alamat"
            android:inputType="text"
            android:focusable="false"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/no_telepon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Telepon"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/no_telepon"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="@color/colorWhite"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorWhite"
            android:text="Konfirmasi"
            android:id="@+id/button_konfirmasi"
            android:background="@color/colorAccentGreen"
            />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
